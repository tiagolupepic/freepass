<!DOCTYPE html>
<html lang="en">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Freepass</title>

    <%= stylesheet 'bootstrap.min' %>
    <%= stylesheet 'font-awesome.min' %>
    <%= stylesheet 'select2' %>
    <%= stylesheet 'custom.min' %>
  </head>

  <body class="nav-md">
    <div class="container body">
      <div class="main_container">
        <div class="col-md-3 left_col">
          <div class="left_col scroll-view">
            <div class="navbar nav_title" style="border: 0;">
              <a href="index.html" class="site_title"><i class="fa fa-id-card"></i> <span>Freepass</span></a>
            </div>

            <div class="clearfix"></div>

            <!-- menu profile quick info -->
            <div class="profile">
              <div class="profile_pic">
                <%= image 'user.jpg', class: 'img-circle profile_img' %>
              </div>
              <div class="profile_info">
                <span>Bem-Vindo,</span>
                <h2>Administrador</h2>
              </div>
            </div>
            <!-- /menu profile quick info -->
            <br />
            <!-- sidebar menu -->
            <div id="sidebar-menu" class="main_menu_side hidden-print main_menu">
              <div class="menu_section">
                <h3>Principal</h3>
                <ul class="nav side-menu">
                  <li><a><i class="fa fa-user"></i> Usuários <span class="fa fa-chevron-down"></span></a>
                    <ul class="nav child_menu">
                      <li><%= link_to 'Adicionar', routes.new_user_path %></li>
                      <li><%= link_to 'Listar', routes.users_path %></li>
                    </ul>
                  </li>
                  <li><a><i class="fa fa-clock-o"></i> Horários <span class="fa fa-chevron-down"></span></a>
                    <ul class="nav child_menu">
                      <li><%= link_to 'Adicionar', routes.new_hour_path %></li>
                      <li><%= link_to 'Listar', routes.hours_path %></li>
                    </ul>
                  </li>
                  <li><a><i class="fa fa-calendar"></i> Periodos <span class="fa fa-chevron-down"></span></a>
                    <ul class="nav child_menu">
                      <li><a href="periods/add.html">Adicionar</a></li>
                      <li><a href="periods/index.html">Listar</a></li>
                    </ul>
                  </li>
                  <li><a><i class="fa fa-flag"></i> Feriados <span class="fa fa-chevron-down"></span></a>
                    <ul class="nav child_menu">
                      <li><%= link_to 'Adicionar', routes.new_holiday_path %></li>
                      <li><%= link_to 'Listar', routes.holidays_path %></li>
                    </ul>
                  </li>
                  <li><a><i class="fa fa-id-card"></i> Cartões / RFID <span class="fa fa-chevron-down"></span></a>
                    <ul class="nav child_menu">
                      <li><a href="cards/add.html">Adicionar</a></li>
                      <li><a href="cards/index.html">Listar</a></li>
                    </ul>
                  </li>
                  <li><a><i class="fa fa-list-ul"></i>Eventos <span class="fa fa-chevron-down"></span></a>
                    <ul class="nav child_menu">
                      <li><a href="events/index.html">Listar</a></li>
                    </ul>
                  </li>
                </ul>
              </div>
            </div>
            <!-- /sidebar menu -->
          </div>
        </div>

        <!-- top navigation -->
        <div class="top_nav">
          <div class="nav_menu">
            <nav>
              <div class="nav toggle">
                <a id="menu_toggle"><i class="fa fa-bars"></i></a>
              </div>

              <ul class="nav navbar-nav navbar-right">
                <li class="">
                  <a href="javascript:;" class="user-profile dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                    <%= image 'user.jpg' %>Administrador
                    <span class=" fa fa-angle-down"></span>
                  </a>
                  <ul class="dropdown-menu dropdown-usermenu pull-right">
                    <li><a href="login.html"><i class="fa fa-sign-out pull-right"></i> Sair</a></li>
                  </ul>
                </li>
              </ul>
            </nav>
          </div>
        </div>
        <!-- /top navigation -->

        <!-- page content -->
        <div class='right_col' role='main'>
          <%= yield %>
        </div>
        <!-- /page content -->

        <!-- footer content -->
        <footer>
          <div class="pull-right">
            Freepass - Admin Template by <a href="https://colorlib.com">Colorlib</a>
          </div>
          <div class="clearfix"></div>
        </footer>
        <!-- /footer content -->
      </div>
    </div>
    <!-- jQuery -->
    <%= javascript 'jquery.min' %>
    <%= javascript 'jquery.maskedinput.min' %>
    <%= javascript 'bootstrap.min' %>
    <%= javascript 'iCheck.min.js' %>
    <%= javascript 'bootstrap-progressbar.min' %>
    <%= javascript 'date' %>
    <%= javascript 'select2' %>
    <%= javascript 'custom' %>
  </body>
</html>
