<%=
  form_for form, class: 'form-horizontal form-label-left' do
    div class: 'form-group' do
      label :cpf, class: 'control-label col-md-3'
      div class: 'col-md-3' do
        text_field :cpf, class: 'form-control'
      end
    end

    div class: 'form-group' do
      label :full_name, class: 'control-label col-md-3'
      div class: 'col-md-6' do
        text_field :full_name, class: 'form-control'
      end
    end

    div class: 'form-group' do
      label :email, class: 'control-label col-md-3'
      div class: 'col-md-6' do
        text_field :email, class: 'form-control'
      end
    end

    unless persisted?
      div class: 'form-group' do
        label :password, class: 'control-label col-md-3'
        div class: 'col-md-4' do
          password_field :password, class: 'form-control'
        end
      end
    end

    div class: 'form-group' do
      label :phone, class: 'control-label col-md-3'
      div class: 'col-md-3' do
        text_field :phone, class: 'form-control'
      end
    end

    div class: 'form-group' do
      label :address, class: 'control-label col-md-3'
      div class: 'col-md-9' do
        text_field :address, class: 'form-control'
      end
    end

    div class: 'form-group' do
      label :periods, class: 'control-label col-md-3'
      div class: 'col-md-6' do
        select :period_ids, [], class: 'select2 form-control', 'data-url': '/periods/search'
      end
    end

    div class: 'ln_solid' do
    end

    div class: 'form-group' do
      div class: 'col-md-6 col-md-offset-3' do
        submit submit_label, class: 'btn btn-success'
        button 'Cancelar', class: 'btn btn-primary'
      end
    end
  end
%>
