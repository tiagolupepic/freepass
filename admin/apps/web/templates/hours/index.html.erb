<div class="page-title">
  <div class="title_left">
    <h3>Horários</h3>
  </div>

  <div class="title_right">
    <div class="col-md-6 col-sm-6 col-xs-12 form-group pull-right top_search">
      <%= render partial: 'shared/search', locals: { path: routes.hours_path } %>
    </div>
  </div>
</div>

<div class='row'>
  <div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
      <div class="x_title">
        <h2>Listar</h2>
        <div class="clearfix"></div>
      </div>

      <div class="x_content">
      <% if hours.size > 0 %>
        <div class="table-responsive">
          <table class="table table-striped jambo_table bulk_action">
            <thead>
              <tr class="headings">
                <th class="column-title" style="display: table-cell;">Nome </th>
                <th class="column-title" style="display: table-cell;">Início </th>
                <th class="column-title" style="display: table-cell;">Fim </th>
                <th class="column-title" style="display: table-cell;">Dias </th>
                <th class="column-title no-link last" style="display: table-cell;"><span class="nobr">Ações</span></th>
              </tr>
            </thead>

            <tbody>
              <% hours.each do |hour| %>
                <tr class="even pointer">
                  <td class=" "><%= hour.name %></td>
                  <td class=" "><%= hour.start_at %></td>
                  <td class=" "><%= hour.end_at %></td>
                  <td class=" "><%= hour.days.map(&:capitalize).join(', ') %></td>
                  <td class=" last">
                    <%= link_to 'Visualizar', routes.hour_path(hour.id), class: 'btn btn-sm btn-default' %>
                    <%= render partial: 'hours/buttons', locals: { hour: hour } %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <p>Nenhum horário cadastrado</p>
      <% end %>
      </div>
    </div>
  </div>
</div>
