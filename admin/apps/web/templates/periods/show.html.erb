<div class='row'>
  <div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
      <div class="x_title">
        <h2><%= period.name %></small></h2>
        <div class="clearfix"></div>
      </div>
      <div class="x_content">

        <table class="table table-striped">
          <tbody>
            <tr>
              <td class='right'>Nome:</td>
              <td><%= period.name %></td>
            </tr>
            <tr>
              <td class='right'>Início:</td>
              <td><%= period.start_at %></td>
            </tr>
            <tr>
              <td class='right'>Fim:</td>
              <td><%= period.end_at %></td>
            </tr>
            <tr>
              <td class='right'>Horário(s):</td>
              <td><%= period.hour_names %></td>
            </tr>
          </tbody>
        </table>

        <%= link_to 'Voltar', routes.periods_path %>
        <%= render partial: 'periods/buttons' %>
      </div>
    </div>
  </div>
</div>
